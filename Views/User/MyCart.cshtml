@{
    ViewBag.Title = "MyCart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<Nazirandco.Models.cart>


<!DOCTYPE html>
<html>

<body>
	
	<!-- products-top -->
	<div class="products-top">
		<!-- container -->
		<div class="container">
			<h3 class="wow fadeInRight animated" data-wow-delay="0.4s" style="visibility: visible; -webkit-animation-delay: 0.4s;">My Cart</h3>
			<h5 class="wow fadeInRight animated" data-wow-delay="0.4s" style="visibility: visible; -webkit-animation-delay: 0.4s;">We Provide you best quality products.<span>Grow your crops with best products.</span></h5>
			<div class="products-top-grids wow fadeInLeft animated" data-wow-delay="0.4s" style="visibility: visible; -webkit-animation-delay: 0.4s;">
				 <table class="table">
            
            <tr style="background-color:#f2dede;">
                <td style="text-align:center; color:#a94442"><b>Name of Product</b></td>
                <td style="text-align:center; color:#a94442"><b>Price of Product</b></td>
                <td style="text-align:center; color:#a94442"><b>Type of Product</b></td>
                 <td style="text-align:center; color:#a94442"><b></b></td>
               
              
              
                <td style="text-align:center; color:#a94442"><b></b></td>
                

            </tr>

            @foreach (var p in Model)
            {
                if(@p.user_id == Convert.ToInt32(@Session["userId"]))
                {
                  <tr>
                        
                        <td style="text-align:center">@p.name</td>
                        <td style="text-align:center">@p.price</td>
                         <td style="text-align:center">@p.type</td>
                      
                         <td style="text-align:center">
                            
                         <form action="../deleteItem/@p.cart_id" onsubmit="return agree()">
                                <input type="submit" value="Delete" style="border:none; border-radius:3px; color:white;font-weight:600" class="btn-warning"/>
                            </form>
                             <td style="text-align:center">
                           <form action="../cartUpdate/@p.cart_id" onsubmit="return agree()">
                                <input type="submit" value="Update" style="border:none; border-radius:3px; color:white;font-weight:600" class="btn-warning"/>
                            </form>
                                 <td style="text-align:center">
                                 <form action="../addQuantity/@p.cart_id" onsubmit="return agree()">
                                <input type="submit" value="Add Quantity" style="border:none; border-radius:3px; color:white;font-weight:600" class="btn-warning"/>
                            </form>
                           
                    </tr>
                }
                
            }    
           
        </table>
                
                 <div class="col-md-6 contact-form wow fadeInRight animated" data-wow-delay="0.4s" style="visibility: visible; -webkit-animation-delay: 0.4s;">
			            <form action="../User/orderConfirm1/@Session["userId"]" onsubmit="return agree()">

                           <input type="submit" value="Order Now">
                        </form>
                   </div>
                 
                 </div>
		</div>
