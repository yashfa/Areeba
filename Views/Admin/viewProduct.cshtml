@{
    ViewBag.Title = "viewProduct";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@model List<Nazirandco.Models.product>

@*============Middle Div about Delete Students *@
 
 
<!--main content start-->
      <section id="main-content">
          <section class="wrapper">
          	<h3><i class="fa fa-angle-right"></i> Managing Stock</h3>
          	
          	<!-- BASIC FORM ELELEMNTS -->
          	<div class="row mt">
          		<div class="col-lg-12">
                  <div class="form-panel">
                  	  <h4 class="mb"><i class="fa fa-angle-right"></i>View Product</h4>
                                       
        <table class="table">
            
            <tr style="background-color:#f2dede;">
                <td style="text-align:center; color:#a94442"><b>Item ID</b></td>
                <td style="text-align:center; color:#a94442"><b>Item Name</b></td>
                <td style="text-align:center; color:#a94442"><b>Item Price</b></td>
                <td style="text-align:center; color:#a94442"><b>Total Amount</b></td>
                 <td style="text-align:center; color:#a94442"><b>Stock</b></td>
                <td style="text-align:center; color:#a94442"><b></b></td>
            </tr>

            @foreach (var p in Model)
            {
                    <tr>
                        <td style="text-align:center">@p.item_id</td>
                        <td style="text-align:center">@p.name</td>
                        <td style="text-align:center">@p.price</td>
                         <td style="text-align:center">@p.amount</td>
                         <td style="text-align:center">@p.stock</td>
                           
                    </tr>
            }    
           
        </table>
                  </div>
          		</div><!-- col-lg-12-->      	
          	</div><!-- /row -->
              </section>
          </section>
