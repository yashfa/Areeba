@{
    ViewBag.Title = "addProduct";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@using Nazirandco.Models;
 <!--main content start-->
      <section id="main-content">
          <section class="wrapper">
          	<h3><i class="fa fa-angle-right"></i> Managing Stock</h3>
          	
          	<!-- BASIC FORM ELELEMNTS -->            
          	<div class="row mt">
          		<div class="col-lg-12">
                  <div class="form-panel">
                  	  <h4 class="mb"><i class="fa fa-angle-right"></i>Add Product</h4>
                      <form class="form-horizontal style-form" action="../addItem/@Session["adminId"]" method="Post">
                          <div class="form-group">
                              <label class="col-sm-2 col-sm-2 control-label">Name of Product</label>
                              <div class="col-sm-10">
                                  <input type="text" class="form-control"name ="nameP">
                              </div>
                          </div>
                          <div class="form-group">
                              <label class="col-sm-2 col-sm-2 control-label">Price of Product</label>
                              <div class="col-sm-10">
                                  <input type="text" class="form-control"name ="priceP">
                              </div>
                          </div>
                          <div class="form-group">
                              <label class="col-sm-2 col-sm-2 control-label">Stock of Product</label>
                              <div class="col-sm-10">
                                  <input type="text" class="form-control" name="stockP">
                              </div>
                          </div>
                            <div class="form-group">
                              <label class="col-sm-2 col-sm-2 control-label">Amount of Product</label>
                              <div class="col-sm-10">
                                  <input type="text" class="form-control"name ="amountP">
                              </div>
                          </div>
                          <div class="form-group">
                              <label class="col-sm-2 col-sm-2 control-label">Type of Product</label>
                              <div class="col-sm-10">
                                  <input type="text" class="form-control" name ="typeP">
                              </div>
                          </div> 
                          
                          
                        <p>
						  <button type="submit" class="btn btn-primary">Add product</button>
						 
						</p>                          
                      </form>
                  </div>
          		</div><!-- col-lg-12-->      	
          	</div><!-- /row -->
              </section>
          </section>
 <!-- js placed at the end of the document so the pages load faster -->
    <script src="~/Content/jsAdmin/jquery.js"></script>
    <script src="~/Content/jsAdmin/jquery-1.8.3.min.js"></script>
    <script src="~/Content/jsAdmin/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="~/Content/jsAdmin/jquery.dcjqaccordion.2.7.js"></script>
    <script src="~/Content/jsAdmin/jquery.scrollTo.min.js"></script>
    <script src="~/Content/jsAdmin/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="~/Content/jsAdmin/jquery.sparkline.js"></script>
<script type="text/javascript">
	    $(document).ready(function () {
	        var unique_id = $.gritter.add({
	            // (string | mandatory) the heading of the notification
